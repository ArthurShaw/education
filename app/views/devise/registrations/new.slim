.reservation
  .gap
  .first_line.wow.fadeInDown
  .first_title.wow.fadeInDown
    p = t('speaker_registration')
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .col-lg-8.col-lg-offset-0.wow.fadeInLeft
      - if resource.errors.any?
        #error_explanation style ='color: red'
          ul
            - for msg in resource.errors.full_messages.uniq
              li = msg
    = f.text_field :first_name, placeholder: t('user_params.first_name'), class: 'wow fadeInLeft'
    = f.text_field :last_name, placeholder: t('user_params.last_name'), class: 'wow fadeInRight'
    = f.text_field :middle_name, placeholder: t('user_params.middle_name'), class: 'wow fadeInLeft'
    = f.text_field :country, placeholder: t('user_params.country'), class: 'wow fadeInRight'
    = f.text_field :city, placeholder: t('user_params.city'), class: 'wow fadeInLeft'
    = f.text_field :phone, placeholder: t('user_params.phone'), class: 'wow fadeInRight'
    = f.email_field :email, placeholder: 'Email', class: 'wow fadeInLeft'
    label.upload-file-container.wow.fadeInRight
      = f.file_field :avatar, placeholder: t('user_params.avatar'), class: '', id: 'js_file_input_button', accept: 'image/png, image/jpg, image/jpeg'
      span#js_file_input_span = t('user_params.avatar')
    = f.text_field :work_place, placeholder: t('user_params.work_place'), class: 'wow fadeInLeft'
    = f.text_field :occupation, placeholder: t('user_params.occupation'), class: 'wow fadeInRight'
    = f.text_field :arrival, placeholder: t('arrival'), 'data-provide' => 'datepicker', class: 'datepicker wow fadeInLeft', 'data-date-format' => 'yyyy/mm/dd', 'data-date-language' => I18n.locale
    = f.text_field :departure, placeholder: t('departure'), 'data-provide' => 'datepicker', class: 'datepicker wow fadeInRight', 'data-date-format' => 'yyyy/mm/dd', 'data-date-language' => I18n.locale
    = f.password_field :password, placeholder: "#{t('user_params.password')} (#{t('min_sym_to_password')})", autocomplete: 'off', class: 'wow fadeInLeft'
    = f.password_field :password_confirmation, placeholder: t('user_params.password_confirmation'), autocomplete: 'off', class: 'wow fadeInRight'
    = f.collection_select :hotel_id, Hotel.all.order(:title), :id, :title_localized, {include_blank: t('not_required'), prompt: t('select_hotel') }, class: 'wow fadeInLeft'
    br
    = f.submit t('to_register'), class: 'reservation_button wow fadeInUp'
