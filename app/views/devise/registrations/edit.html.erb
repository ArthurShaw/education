<div class="mini_gap">
</div>
<div class="first_line wow fadeInDown">
</div>
<div class="first_title wow fadeInDown">
  <p>
    <%= t('edit_profile')%>
  </p>
</div>
<div class="first_description wow fadeInDown">
</div>
<div class="col-lg-6 col-lg-offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>

      <fieldset>
        <hr />
        <div class="form-group">
          <%= f.label t('user_params.first_name'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.last_name'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.middle_name'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :middle_name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.phone'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.country'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :country, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.city'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :city, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.degree'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_field :degree, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.about'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.text_area :biography, class: 'form-control' %>
            <i> <%= t('max_symbols') %></i>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.avatar'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.file_field :avatar, class: 'form-control', accept: 'image/png, image/jpg, image/jpeg' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.new_password'), class: 'col-lg-2 control-label' %>


          <div class="col-lg-10">

            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
            <i> <%= t('min_sym_to_password')%> </i>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.password_confirmation'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.current_password'), class: 'col-lg-2 control-label' %>

          <div class="col-lg-10">
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
            <i><%= t('curr_pass_inf')%></i>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit t('update'),  class: 'btn btn-primary' %>
          </div>
        </div>
      </fieldset>
  <% end %>
</div>

<div class="col-lg-6 col-lg-offset-3">
  <%= link_to t('back'), profile_path, class: 'btn btn-link' %>
</div>