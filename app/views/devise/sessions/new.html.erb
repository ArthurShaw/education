<br>
<div class="col-lg-6 col-lg-offset-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal center'}) do |f| %>
      <fieldset>
        <legend> <%= t('login') %></legend>
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
              <a href="#" data-dismiss="alert" class="close">×</a>
              <ul>
                <li>
                  <%= value %>
                </li>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.label :email, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('user_params.password'), class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>

            <% if devise_mapping.rememberable? -%>
                <div class="form-checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label t('remember') %>
                </div>
            <% end -%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-2 col-lg-offset-2">
            <%= f.submit 'Войти', class: 'btn btn-primary' %>
          </div>
          <div class="col-lg-8">
            <%= link_to t('forgot_password'), new_password_path(resource_name) %><br>
            <%= link_to t('registration'), new_registration_path(resource_name) %>
          </div>
        </div>

      </fieldset>
  <% end %>

</div>
