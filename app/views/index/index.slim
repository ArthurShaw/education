#sh_carousel.carousel.slide
  .carousel-indicators
    .wow.fadeInLeft.active.btn.eventime_button.graybtn.graytxt data-slide-to="0" data-target="#sh_carousel" = translate_field(@sections[0], :title)
    - for i in (1..(@sections.size - 1))
      .wow.fadeInLeft.btn.eventime_button.graybtn.graytxt data-slide-to="#{i}" data-target="#sh_carousel" = translate_field(@sections[i], :title)

  .carousel-inner
    .active.item
      - section_to_days(@sections[0]).each do |day, events|
        .schedule_date.wow.fadeInLeft = day.day
        .schedule_month.wow.fadeInRight = l(day, :format => :month)
        .mini_gap
        - for event in events
          .panel.wow.fadeInDown.event_line
            a data-toggle="collapse" href="#0_slide"
            .accordion_left
              .accordions_titles_small
                p.accordion_date = "#{event.from.strftime('%H:%M')} - #{event.to.strftime('%H:%M')}"
            .accordion_right
              .accordions_titles_small
                .accordion_description
                  - if event.workshop
                    p = link_to translate_field(event, :title), info_workshop_path(event.workshop), class: 'js-modal-toggle', :data => {:toggle => "modal"}, :remote => true
                  - else
                    p = translate_field(event, :title)
                  - if event.workshop
                    - if event.workshop.user
                      p.name
                        = link_to translate_field(event.workshop.user, :readable_name), info_workshop_path(event.workshop), class: 'js-modal-toggle', :data => {:toggle => "modal"}, :remote => true
                    - if event.workshop.special_guest
                      p.name
                        = link_to translate_field(event.workshop.special_guest, :readable_name), info_workshop_path(event.workshop), class: 'js-modal-toggle', :data => {:toggle => "modal"}, :remote => true
            .panel-collapse.collapse.accordion_full.in
              p = translate_field(event, :description)
            /! Accordion item
            .mini_gap

    - for i in (1..(@sections.size-1))
      .item
        - section_to_days(@sections[i]).each do |day, events|
          .schedule_date = day.day
          .schedule_month = l(day, :format => :month)
          .mini_gap
          - for event in events
            .panel.event_line
              a data-parent="#accordion1" data-toggle="collapse" href="#one_one"
              .accordion_left
                .accordions_titles_small
                  p.accordion_date = "#{event.from.strftime('%H:%M')} - #{event.to.strftime('%H:%M')}"
              .accordion_right
                .accordions_titles_small
                  .accordion_description
                    - if event.workshop
                      p = link_to translate_field(event, :title), info_workshop_path(event.workshop), class: 'js-modal-toggle', :data => {:toggle => "modal"}, :remote => true
                    - else
                      p = translate_field(event, :title)
                    - if event.workshop
                      - if event.workshop.user
                        p.name
                          = link_to translate_field(event.workshop.user, :readable_name), info_workshop_path(event.workshop), class: 'js-modal-toggle', :data => {:toggle => "modal"}, :remote => true
                        - if event.workshop.special_guest
                          p.name
                            = link_to translate_field(event.workshop.special_guest, :readable_name), info_workshop_path(event.workshop), class: 'js-modal-toggle', :data => {:toggle => "modal"}, :remote => true
              .panel-collapse.collapse.accordion_full.in
                p = translate_field(event, :description)
              .mini_gap
          .gap
    /! Carousel nav
    a.left_arrow.wow.fadeInLeft data-slide="prev" href="#sh_carousel"
      svg height="48" width="26px"
        polygon points="3.3,24.5 25.5,2.3 24,0.8 0.3,24.5 24,48.2 25.5,46.7"
